<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href= "css/dash.css">
</head>

<body>

    <div class="container">
        <div class="header">
            <h3>Dashboard</h3>
            <a href="/login">Logout</a>
        </div>
        <div class="sidebar">
            <a href="#">Home</a>
            <a href="/login">Logout</a>
        </div>

        <div class="body">
            <div class="table-header">
                <h3>Admin Profile</h3>
            <a href="/signup">Add Admin Profile</a>
            </div>

            <div class="table">
                <table>
                    <thead>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                        <th>Password</th>
                        <th colspan="2">Actions</th>
                    </thead>
                    <tbody>
                        <% users.forEach(function(user){%>
                            <tr>
                                <td><%= user.username %></td>
                                <td><%= user.email %></td>
                                <td><%= user.phone_number %></td>
                                <td><%= user.password %></td>
                                <td><a href="edit/<%= user.id %>" class='edit'>edit</a></td>
                                <td><a href="delete/<%= user.id %>" class='delete'>delete</a></td>
                            </tr>
                        <% }) %>
                        <tr></tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>